
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">

            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-justify">
                {% for article in articles %}	
                    <div class="col mb-5">
                        <div class="card h-100">
                        <!-- Product image-->
                        <img
                            class="card-img-top"
                            src="{{ vich_uploader_asset(article, 'imageFile') | imagine_filter('small_sets') }}" class="img-fluid img-thumbnail"
                            alt="..."
                        />
                        <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                <!-- Titre de l'article -->
            
                                 {#<a href="{{path('app_article_affichage', {'id': article.id})}}"> <h5 class="fw-bolder">{{ article.titre}} </h5> </a> #}
                                 <a href="{{ path('app_article_affichage', {'id': article.id, 'slug': article.slug}) }}" <h5 class="fw-bolder">{{ article.titre}} </h5> </a><br>
                                <!-- Categorie de l'article -->
                                <u>{{article.categorie.titre }} </u><br>
                                

                                <!-- Resume de l'article -->
                                {{article.resume|u.truncate(200) }}

                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                               {# <a href="{{path('app_article_affichage', {'id': article.id})}}" class="btn btn-primary"> Lire la suite </a>  #}

                                </div>
                            </div>
                        </div>
                    </div>  
                {% endfor %}
                
                </div>
        </div>

        
    </section>